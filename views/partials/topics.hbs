
        <div class="row" id="topics">
            {{#each allCategories as |category|}}
                <div class="col-12 col-sm-12 col-md-6 col-lg-4 mt-3" style="display: flex; justify-content: center">
                    <div class="card categories" style="width: 18rem;" data-category='{{category.id}}'>
                        <img src="{{category.photo}}" class="card-img-top" alt="{{category.id}}">
                        <div class="card-body">
                            <p class="card-text" style="text-align: center">{{category.name}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

